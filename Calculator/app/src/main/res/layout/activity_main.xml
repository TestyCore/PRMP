<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

        <TextView
            android:id="@+id/operationField"
            style="@style/DisplayVertical"
            android:text="" />

        <TextView
            android:id="@+id/resultField"
            style="@style/DisplayVertical"
            android:text="" />

        <GridLayout
            android:id="@+id/buttonGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16sp"
            android:layout_weight="0.44"
            android:columnCount="4"
            android:rowCount="6">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/q"
                    style="@style/Plug"
                    android:text=""/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/w"
                    style="@style/Plug"
                    android:text=""/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/b_e"
                    style="@style/Plug"
                    android:text=""/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/b_back"
                    style="@style/Back"
                    android:text=""
                    android:drawableRight="@drawable/icon_backspace"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/b_ac"
                    style="@style/C"
                    android:text="C"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/b_brackets"
                    style="@style/GreenOperation"
                    android:text="( )"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/b_percent"
                    style="@style/GreenOperation"
                    android:text="%"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/b_div"
                    style="@style/GreenOperation"
                    android:text="/"/>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/b_7"
                    style="@style/Number"
                    android:text="7"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/b_8"
                    style="@style/Number"
                    android:text="8"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/b_9"
                    style="@style/Number"
                    android:text="9"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/b_mul"
                    style="@style/GreenOperation"
                    android:text="*"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/b_4"
                    style="@style/Number"
                    android:text="4"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/b_5"
                    style="@style/Number"
                    android:text="5"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/b_6"
                    style="@style/Number"
                    android:text="6"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/b_minus"
                    style="@style/GreenOperation"
                    android:text="-"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/b_1"
                    style="@style/Number"
                    android:text="1"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/b_2"
                    style="@style/Number"
                    android:text="2"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/b_3"
                    style="@style/Number"
                    android:text="3"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/b_add"
                    style="@style/GreenOperation"
                    android:text="+"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/b_invert"
                    style="@style/Number"
                    android:text="+/-"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/b_0"
                    style="@style/Number"
                    android:text="0"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/b_dot"
                    style="@style/Number"
                    android:text="."/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/b_equals"
                    style="@style/Equal"
                    android:text="="/>

        </GridLayout>
</LinearLayout>