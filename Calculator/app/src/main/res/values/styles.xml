<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Plug">
        <item name="android:layout_rowWeight">1</item>
        <item name="android:background">@color/black</item>
    </style>
    <style name="CommonButton">
        <item name="android:layout_rowWeight">1</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@drawable/round_button_background</item>
        <item name="android:layout_width">80sp</item>
        <item name="android:layout_height">50sp</item>
        <item name="android:layout_margin">4sp</item>
    </style>
    <style name="Back" parent="CommonButton">
        <item name="android:backgroundTint">@color/black</item>
    </style>
    <style name="C" parent="CommonButton">
        <item name="android:textColor">@color/c</item>
    </style>
    <style name="GreenOperation" parent="CommonButton">
        <item name="android:textColor">@color/green_operation</item>
    </style>
    <style name="Number" parent="CommonButton">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Equal" parent="CommonButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/equal_background</item>
    </style>



    <style name="CommonButtonHorizontal">
        <item name="android:layout_rowWeight">1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/round_button_background</item>
        <item name="android:layout_width">60sp</item>
        <item name="android:layout_height">35sp</item>
        <item name="android:layout_marginRight">60sp</item>
        <item name="android:layout_marginBottom">8sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="BackHorizonal" parent="CommonButtonHorizontal">
        <item name="android:backgroundTint">@color/black</item>
    </style>
    <style name="CHorizonal" parent="CommonButtonHorizontal">
        <item name="android:textColor">@color/c</item>
    </style>
    <style name="GreenOperationHorizonal" parent="CommonButtonHorizontal">
        <item name="android:textColor">@color/green_operation</item>
    </style>
    <style name="NumberHorizonal" parent="CommonButtonHorizontal">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="EqualHorizonal" parent="CommonButtonHorizontal">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/equal_background</item>
    </style>
    <style name="HorizontalOperation" parent="CommonButtonHorizontal">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
    </style>




    <style name="MyDisplayStyle">
        <item name="android:maxLines">1</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:autoSizeMinTextSize">10sp</item>
        <item name="android:autoSizeMaxTextSize">70sp</item>
        <item name="android:autoSizeStepGranularity">2sp</item>
    </style>

    <style name="MyDisplayStyleHorizontal">
        <item name="android:maxLines">1</item>
        <item name="android:paddingRight">5sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMinTextSize">10sp</item>
        <item name="android:autoSizeMaxTextSize">40sp</item>
        <item name="android:autoSizeStepGranularity">2sp</item>
    </style>

    <style name="DisplayVertical" parent="MyDisplayStyle">
        <item name="android:layout_weight">0.28</item>
    </style>

    <style name="DisplayHorizontal" parent="MyDisplayStyleHorizontal">
        <item name="android:layout_weight">0.28</item>
    </style>

</resources>